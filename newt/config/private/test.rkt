#lang racket/base

(module+ test
  (require rackunit)

  (module m newt/config/main
    (define init #f)
    (define enhance-body #f)
    (define clean #f))

  (check-not-exn (位 () (eval '(module m newt/config/main
                               (define init #f)
                               (define enhance-body #f)
                               (define clean #f))
                             (make-base-namespace))))

  (check-exn #rx"newt/config: You must define a function named \"init\""
             (位 () (eval '(module m newt/config/main
                           #;(define init #f)
                           (define enhance-body #f)
                           (define clean #f))
                         (make-base-namespace))))

  (check-exn #rx"newt/config: You must define a function named \"enhance-body\""
             (位 () (eval '(module m newt/config/main
                           (define init #f)
                           #;(define enhance-body #f)
                           (define clean #f))
                         (make-base-namespace))))

  (check-exn #rx"newt/config: You must define a function named \"clean\""
             (位 () (eval '(module m newt/config/main
                           (define init #f)
                           (define enhance-body #f)
                           #;(define clean #f))
                         (make-base-namespace)))))
